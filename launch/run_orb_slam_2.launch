<?xml version="1.0"?>
<launch>

  <node pkg="orb_slam_2_ros" name="orb_slam_2_ros_node" type="orb_slam_2_ros_node" output="screen" >
    <param name="interface_type" value="stereo" />
    <param name="vocabulary_file_path" value="/home/raab/sp/VIOS/Vocabulary/ORBvoc.txt" />
    <param name="settings_file_path" value="/home/raab/sp/VIOS/Settings/EuRoC.yaml" />
    <param name="visualization" type="bool" value="false" /> <!-- Disale when running on quadcotper -->
    <param name="use_body_transform" type="bool" value="true" /> <!-- Body transform isn't available in vanilla Orb Slam 2 -->
    <param name="use_imu" type="bool" value ="true"/>
    <remap from="camera/left/image_raw" to="/cam0/image_raw" />
	<remap from="camera/right/image_raw" to="/cam1/image_raw" />


  </node>

</launch>
